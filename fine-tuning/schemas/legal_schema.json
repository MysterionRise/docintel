{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docintel.dev/schemas/legal_schema.json",
  "title": "Legal Discovery Schema",
  "description": "Schema for structured extraction from legal documents in e-discovery context. Used for data generation and validation in DocIntel fine-tuning.",
  "type": "object",
  "required": ["document_type", "relevance", "privilege", "key_entities", "summary"],
  "properties": {
    "document_type": {
      "type": "string",
      "enum": ["complaint", "motion", "brief", "opinion", "contract", "correspondence", "memo"],
      "description": "The type of legal document being analyzed."
    },
    "relevance": {
      "type": "object",
      "description": "Relevance assessment for the document in the discovery context.",
      "required": ["score", "categories", "reasoning"],
      "properties": {
        "score": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Relevance score from 0.0 (irrelevant) to 1.0 (highly relevant)."
        },
        "categories": {
          "type": "array",
          "description": "Relevance categories that apply to this document.",
          "items": {
            "type": "string"
          }
        },
        "reasoning": {
          "type": "string",
          "description": "Explanation of why this relevance score was assigned."
        }
      },
      "additionalProperties": false
    },
    "privilege": {
      "type": "object",
      "description": "Privilege assessment for the document.",
      "required": ["type", "reasoning"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["none", "attorney_client", "work_product", "joint_defense"],
          "description": "Type of legal privilege that applies to this document."
        },
        "reasoning": {
          "type": "string",
          "description": "Explanation of the privilege determination."
        }
      },
      "additionalProperties": false
    },
    "key_entities": {
      "type": "array",
      "description": "Important entities identified in the document.",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the entity."
          },
          "type": {
            "type": "string",
            "enum": ["person", "organization", "court", "statute"],
            "description": "Category of the entity."
          },
          "role": {
            "type": "string",
            "description": "Role of the entity in the legal matter (e.g. 'plaintiff', 'defendant', 'witness', 'counsel')."
          }
        },
        "additionalProperties": false
      }
    },
    "dates": {
      "type": "array",
      "description": "Important dates mentioned in the document.",
      "items": {
        "type": "object",
        "required": ["date", "event"],
        "properties": {
          "date": {
            "type": "string",
            "description": "The date. ISO 8601 format (YYYY-MM-DD) preferred."
          },
          "event": {
            "type": "string",
            "description": "Description of what happened or is scheduled on this date."
          }
        },
        "additionalProperties": false
      }
    },
    "summary": {
      "type": "string",
      "description": "A concise summary of the legal document covering its purpose, key arguments, entities, and relevance to the matter."
    }
  },
  "additionalProperties": false
}
